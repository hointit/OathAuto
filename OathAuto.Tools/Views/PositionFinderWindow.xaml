<Window x:Class="OathAuto.Tools.Views.PositionFinderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Position Finder - Press F9 to Capture"
        Height="450" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#DD000000"
        Topmost="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#00FF00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Title Bar for Dragging -->
        <Grid Height="30" VerticalAlignment="Top" Background="#222222" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <TextBlock Text="Position Finder Tool - Press F9 to Capture"
                       Foreground="#00FF00"
                       VerticalAlignment="Center"
                       Margin="10,0"/>
            <Button Content="×"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    Foreground="Red"
                    BorderThickness="0"
                    FontSize="20"
                    Click="CloseButton_Click"/>
        </Grid>

        <Grid Margin="10,40,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Target Window Info -->
            <Border Grid.Row="0" Background="#222222" Padding="10" Margin="0,0,0,10" BorderBrush="#00FF00" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Target Window:" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="{Binding TargetWindowTitle}" Style="{StaticResource ValueTextStyle}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Mouse Position Display -->
            <Border Grid.Row="1" Background="#222222" Padding="10" Margin="0,0,0,10" BorderBrush="#00FF00" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Screen Position -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Screen Position:" Style="{StaticResource HeaderTextStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="X: " Foreground="Gray"/>
                            <TextBlock Text="{Binding MouseScreenX}" Style="{StaticResource ValueTextStyle}"/>
                            <TextBlock Text="  Y: " Foreground="Gray" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding MouseScreenY}" Style="{StaticResource ValueTextStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Window Position -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Window Position:" Style="{StaticResource HeaderTextStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="X: " Foreground="Gray"/>
                            <TextBlock Text="{Binding MouseWindowX}" Style="{StaticResource ValueTextStyle}" Foreground="#FFD700"/>
                            <TextBlock Text="  Y: " Foreground="Gray" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding MouseWindowY}" Style="{StaticResource ValueTextStyle}" Foreground="#FFD700"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Instructions -->
            <Border Grid.Row="2" Background="#1a1a1a" Padding="10" Margin="0,0,0,10" BorderBrush="#555555" BorderThickness="1">
                <TextBlock TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="11">
                    <Run Text="• Press " Foreground="White"/>
                    <Run Text="F9" Foreground="#00FF00" FontWeight="Bold"/>
                    <Run Text=" to capture current position" Foreground="White"/>
                    <LineBreak/>
                    <Run Text="• Click " Foreground="White"/>
                    <Run Text="'Set Target'" Foreground="#00FF00" FontWeight="Bold"/>
                    <Run Text=" then click on game window" Foreground="White"/>
                    <LineBreak/>
                    <Run Text="• Window position (gold) is what you use in code" Foreground="#FFD700" FontWeight="Bold"/>
                </TextBlock>
            </Border>

            <!-- Captured Positions List -->
            <Border Grid.Row="3" Background="#222222" Padding="5" BorderBrush="#00FF00" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Captured Positions:" Style="{StaticResource HeaderTextStyle}" Margin="5"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CapturedPositions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1a1a1a" Margin="2" Padding="8,5" BorderBrush="#555555" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Index}" Foreground="#00FF00" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Grid.Column="1" Foreground="White" FontFamily="Consolas" FontSize="11">
                                                <Run Text="X: "/><Run Text="{Binding WindowX}" Foreground="#FFD700" FontWeight="Bold"/>
                                                <Run Text="  Y: "/><Run Text="{Binding WindowY}" Foreground="#FFD700" FontWeight="Bold"/>
                                                <Run Text=" - " Foreground="Gray"/><Run Text="{Binding Description}" Foreground="#AAAAAA"/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Set Target Window" Click="SetTargetButton_Click" Style="{StaticResource ButtonStyle}"/>
                <Button Content="Capture (F9)" Command="{Binding CaptureCommand}" Style="{StaticResource ButtonStyle}"/>
                <Button Content="Clear List" Command="{Binding ClearCommand}" Style="{StaticResource ButtonStyle}"/>
                <Button Content="Copy Code" Click="CopyCodeButton_Click" Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

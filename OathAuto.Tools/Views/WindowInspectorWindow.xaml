<Window x:Class="OathAuto.Tools.Views.WindowInspectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Window Inspector" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Game Window Handle:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="txtWindowHandle" Width="150" VerticalAlignment="Center"
                     Text="0x00000000" Margin="0,0,10,0"/>
            <Button x:Name="btnInspect" Content="Inspect Hierarchy"
                    Click="BtnInspect_Click" Padding="10,5" Margin="0,0,10,0"/>
            <Button x:Name="btnGetFromProcess" Content="Get from Game Process"
                    Click="BtnGetFromProcess_Click" Padding="10,5"/>
        </StackPanel>

        <!-- Position Inspector -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Inspect Position - X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtX" Width="80" Text="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtY" Width="80" Text="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnInspectPosition" Content="Inspect at Position"
                    Click="BtnInspectPosition_Click" Padding="10,5" Margin="0,0,10,0"/>
            <Button x:Name="btnCaptureMousePos" Content="Capture Mouse Position (3s delay)"
                    Click="BtnCaptureMousePos_Click" Padding="10,5"/>
        </StackPanel>

        <!-- Results -->
        <ScrollViewer Grid.Row="2" Margin="10" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="txtResults"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="#1E1E1E"
                     Foreground="#D4D4D4"
                     Padding="5"/>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <TextBlock x:Name="txtStatus" Text="Ready. Enter game window handle or get from process."/>
        </StatusBar>
    </Grid>
</Window>

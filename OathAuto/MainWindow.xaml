<Window x:Class="OathAuto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OathAuto"
        xmlns:userControls="clr-namespace:OathAuto.Views.UserControls"
        mc:Ignorable="d"
        Title="OathAuto - Game Automation"
        Height="700"
        Width="550">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Tools Menu Bar -->
    <Menu Grid.Row="0" Background="#F0F0F0">
      <MenuItem Header="Tools">
        <MenuItem Header="Dừng tất cả auto" Click="PositionFinder_Click">
          <MenuItem.Icon>
            <TextBlock Text="🎯" FontSize="14" FontFamily="Segoe UI Symbol"/>
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="Position Finder..." Click="PositionFinder_Click">
          <MenuItem.Icon>
            <TextBlock Text="🎯" FontSize="14" FontFamily="Segoe UI Emoji"/>
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>
    </Menu>

    <!-- Player List Control -->
    <userControls:PlayerListControl Grid.Row="1"
                                        Height="200"
                                        DataContext="{Binding}"/>

    <!-- Tab Content Control -->
    <userControls:TabContentControl Grid.Row="2"
                                        Margin="0,5,0,0"
                                        DataContext="{Binding}"/>
  </Grid>
</Window>

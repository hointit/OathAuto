<UserControl x:Class="OathAuto.Views.UserControls.ListMonsterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="5">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Text="Monster List"
                   VerticalAlignment="Center"
                   Margin="5,0"/>

        <Button Grid.Column="1"
                Content="Refresh"
                Padding="10,5"
                Margin="5,0"/>
      </Grid>
    </Border>

    <!-- Monster ListView -->
    <ListView Grid.Row="1"
              ItemsSource="{Binding Player.Monsters}">
      <ListView.View>
        <GridView>
          <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}"/>
          <GridViewColumn Header="Level" Width="80" DisplayMemberBinding="{Binding Level}"/>
          <GridViewColumn Header="HP %" Width="100" DisplayMemberBinding="{Binding HPPercent, StringFormat={}{0:F1}%}"/>
          <GridViewColumn Header="Distance" Width="100" DisplayMemberBinding="{Binding Distance, StringFormat={}{0:F1}}"/>
        </GridView>
      </ListView.View>
    </ListView>
  </Grid>
</UserControl>

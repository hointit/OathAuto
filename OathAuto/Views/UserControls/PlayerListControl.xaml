<UserControl x:Class="OathAuto.Views.UserControls.PlayerListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Buttons -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Player List"
                           VerticalAlignment="Center"
                           Margin="5,0"/>

                <Button Grid.Column="1"
                        Content="Refresh"
                        Margin="5"/>

                <Button Grid.Column="2"
                        Content="Settings"
                        Margin="5"/>
            </Grid>
        </Border>

        <!-- Player ListView -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Players}"
                  SelectedItem="{Binding SelectedPlayer, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Level" Width="80" DisplayMemberBinding="{Binding Level}"/>
                    <GridViewColumn Header="HP %" Width="80" DisplayMemberBinding="{Binding HPPercent, StringFormat={}{0:F1}%}"/>
                    <GridViewColumn Header="MP %" Width="80" DisplayMemberBinding="{Binding MPPercent, StringFormat={}{0:F1}%}"/>
                    <GridViewColumn Header="Map" Width="150" DisplayMemberBinding="{Binding MapName}"/>
                    <GridViewColumn Header="Combat" Width="80" DisplayMemberBinding="{Binding InCombat}"/>
                    <GridViewColumn Header="Training" Width="80" DisplayMemberBinding="{Binding isTraining}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>

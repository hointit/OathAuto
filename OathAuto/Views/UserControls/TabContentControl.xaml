<UserControl x:Class="OathAuto.Views.UserControls.TabContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:OathAuto.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800">
  <Border BorderBrush="Gray" BorderThickness="1">
    <TabControl>
      <TabItem Header="Training">
        <userControls:TrainingControl DataContext="{Binding SelectedPlayer}"/>
      </TabItem>
      <TabItem Header="Đi Tháp">
        <userControls:TowerControl DataContext="{Binding SelectedPlayer}"/>
      </TabItem>
      <TabItem Header="Skills">
        <userControls:ListSkillControl DataContext="{Binding SelectedPlayer}"/>
      </TabItem>
      <TabItem Header="Settings">
        <Grid>
          <TextBlock Text="Settings Tab - Coming Soon"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
        </Grid>
      </TabItem>
    </TabControl>
  </Border>
</UserControl>

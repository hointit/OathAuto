<UserControl x:Class="OathAuto.Views.UserControls.TowerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OathAuto.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Margin="5">
        <GroupBox.Header>
            <CheckBox Content="Tower Mode"
                      IsChecked="{Binding IsTowerMode, Mode=TwoWay}"
                      FontWeight="Bold"/>
        </GroupBox.Header>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <CheckBox Content="Auto Move (disabled for now)"
                          IsChecked="{Binding Settings.IsAutoMoveEnabled, Mode=TwoWay}"
                          VerticalAlignment="Center"
                          Margin="0,5"
                          IsEnabled="False"/>
            </StackPanel>

            <TextBlock Grid.Row="1"
                       Text="Tower Positions:"
                       Margin="0,10,0,5"
                       FontWeight="Bold"/>

            <GroupBox Grid.Row="2" Header="Select Positions to Patrol" Margin="0,5,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <ItemsControl ItemsSource="{Binding TowerPositions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Content="{Binding DisplayName}"
                                          Margin="5,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </GroupBox>
</UserControl>

<UserControl x:Class="OathAuto.Views.UserControls.TrainingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                BorderBrush="Gray"
                BorderThickness="0,0,0,1"
                Padding="10">
            <TextBlock Text="Training Controls"
                       FontSize="14"
                       FontWeight="Bold"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <!-- Player Information Section -->
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Padding="10"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Player Information"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Name:"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Name}"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Level:"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="{Binding Level}"
                                       Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Map:"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       Text="{Binding MapName}"
                                       Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Text="Status:"
                                       Margin="0,0,10,5"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Training: "
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding isTraining}"
                                           FontWeight="Bold"
                                           Margin="0,0,15,0"/>
                                <TextBlock Text="In Combat: "
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding InCombat}"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Training Actions Section -->
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Training Actions"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <Button Content="Start Training"
                                Command="{Binding StartTrainingCommand}"
                                Margin="0,0,0,5"
                                Padding="15,8"
                                HorizontalAlignment="Left"
                                MinWidth="150"/>

                        <Button Content="Stop Training"
                                Command="{Binding StopTrainingCommand}"
                                Margin="0,0,0,5"
                                Padding="15,8"
                                HorizontalAlignment="Left"
                                MinWidth="150"/>

                        <Button Content="Use Item"
                                Command="{Binding UseItemCommand}"
                                Padding="15,8"
                                HorizontalAlignment="Left"
                                MinWidth="150"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

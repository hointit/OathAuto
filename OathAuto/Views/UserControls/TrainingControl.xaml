<UserControl x:Class="OathAuto.Views.UserControls.TrainingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
  <GroupBox Margin="5">
    <GroupBox.Header>
      <CheckBox Content="Training"
                IsChecked="{Binding isTraining, Mode=TwoWay}"
                FontWeight="Bold"/>
    </GroupBox.Header>
    <Grid Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- LevelUp Checkbox -->
      <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                Content="LevelUp"
                IsChecked="{Binding CanLevelUp, Mode=TwoWay}"
                Margin="0,5"/>

      <!-- Max Level -->
      <TextBlock Grid.Row="1" Grid.Column="0"
                 Text="Max Level:"
                 VerticalAlignment="Center"
                 Margin="0,5,10,5"/>
      <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
               Text="{Binding MaxLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               VerticalAlignment="Center"
               Margin="0,5"/>

      <!-- Reset Level Item -->
      <TextBlock Grid.Row="2" Grid.Column="0"
                 Text="Reset Item:"
                 VerticalAlignment="Center"
                 Margin="0,5,10,5"/>
      <ComboBox Grid.Row="2" Grid.Column="1"
                ItemsSource="{Binding NonEmptyInventoryItems}"
                SelectedItem="{Binding ResetLevelItem, Mode=TwoWay}"
                DisplayMemberPath="ItemName"
                VerticalAlignment="Center"
                Margin="0,5,5,5"/>
      <Button Grid.Row="2" Grid.Column="2"
              Content="X"
              Width="25"
              Command="{Binding ClearResetLevelItemCommand}"
              VerticalAlignment="Center"
              Margin="0,5"/>

      <!-- Add Point Item -->
      <TextBlock Grid.Row="3" Grid.Column="0"
                 Text="Add Point Item:"
                 VerticalAlignment="Center"
                 Margin="0,5,10,5"/>
      <ComboBox Grid.Row="3" Grid.Column="1"
                ItemsSource="{Binding NonEmptyInventoryItems}"
                SelectedItem="{Binding AddPointItem, Mode=TwoWay}"
                DisplayMemberPath="ItemName"
                VerticalAlignment="Center"
                Margin="0,5,5,5"/>
      <Button Grid.Row="3" Grid.Column="2"
              Content="X"
              Width="25"
              Command="{Binding ClearAddPointItemCommand}"
              VerticalAlignment="Center"
              Margin="0,5"/>
    </Grid>
  </GroupBox>
</UserControl>
